#lang rhombus

import:
  = "operators.rhm"

fun adder(x):
  fun (y):
    x + y

fun multiplier(x):
  fun (y):
    x * y

fun test_forward_pipe(x):
  x |> adder(5) |> multiplier(6)

fun test_backward_pipe(x):
  multiplier(5) <| adder(6) <| x

val test_forward_compose:
  adder(2) >> multiplier(10)

val test_backward_compose:
  adder(2) << multiplier(10)

60 == test_forward_pipe(5)
55 == test_backward_pipe(5)
70 == test_forward_compose(5)
52 == test_backward_compose(5)
